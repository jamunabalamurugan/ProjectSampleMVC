@model OnlineBankingProject.Models.LoginVm

@{
    ViewBag.Title = "Login";

    Layout = "~/Views/Shared/HomePageBeforeLogin.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<body background="~/Images/money1.jpg">
</body>
<h2>Login</h2>


@using (Html.BeginForm("Login", "LOR", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ruser_Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ruser_Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ruser_Id, "", new { @class = "text-danger" })
                <h4>@ViewBag.Message1</h4>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Login_Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Login_Password, "", new { @class = "text-danger" })
                <h4>@ViewBag.Message2</h4>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />

            </div>
            &nbsp;&nbsp;&nbsp;&nbsp; @Html.ActionLink("Forgot Password", "ForgotPassword", "LOR")

        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "HomeBeforeLogin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
