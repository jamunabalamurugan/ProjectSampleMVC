@model OnlineBankingProject.Models.Imps

@*@model OnlineBankingProject.Models.Transaction_Table*@

@{
    ViewBag.Title = "Imps";
    Layout = "~/Views/Shared/HomePageAfterLogin.cshtml";
}

<html>
<head>
    <style>
        body {
            background-color: peachpuff
        }
    </style>

</head>
<body>
    @using (Html.BeginForm("Imps", "DashBoard", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Imps</h4>
            <hr />
            <div class="form-group">
                @*@Html.LabelFor(model => model.Account_Number, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Account_Number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Account_Number, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Beneficiary_Account_Number, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    &nbsp; &nbsp; @Html.DropDownList("Beneficiary_Account_Number", new SelectList(ViewBag.BeneficiaryI, "Beneficiary_Account_Number", "Beneficiary_Name"), new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Beneficiary_Account_Number, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Transaction_Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Transaction_Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Transaction_Amount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.Transaction_date, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.HiddenFor(model => model.Transaction_Date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Transaction_Date, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" onclick="myFunction()" />
                    <script>
                        function myFunction() {
                            alert("Transaction Successfull");
                        }
                    </script>

                </div>
            </div>
        </div>
        @*<input type="submit" value="Savey" class="btn btn-default" />*@
    }

        <div>
            @Html.ActionLink("Back", "HomeAfterLogin", "LOR", new { @class = "form-control" }, null)
           
        </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>