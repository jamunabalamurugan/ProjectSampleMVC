<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script>
        function preventBack() { Window.history.forword();}
        setTimeout("preventBack()", 0)
        window.onunload = function () { null };
    </script>

    <title>@ViewBag.Title - OnlineBank</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
    
        /*body {
            background-image: url("../Images/workplace.jpg");
            opacity: 0.6;
        }*/
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "HomeAfterLogin","LOR", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        DashBoard
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Account Statement", "AccountStatement", "DashBoard")</li>
                                        <li>@Html.ActionLink("Account Detail", "AccountDetails", "DashBoard")</li>
                                    </ul>
                                </div>
                            </li>
                 
                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Fund Transfer
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Transaction", "TransactionLogin", "DashBoard")</li>
                                        <li>@Html.ActionLink("Add Beneficiary", "AddNewBeneficiary", "DashBoard")</li>
                                      

                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                        Profile
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">

                                        <li>@Html.ActionLink("View Profile", "ViewProfile", "DashBoard")</li>
                                        <li>@Html.ActionLink("Change Password", "ChangePassword", "LOR")</li>
                                    </ul>
                                </div>
                            </li>
                            <li>@Html.ActionLink("Logout", "Logout", "LOR")</li>

                        </ul>
                    </div>

                </ul>

            </div>
        </div>
    </div>
    
       
      

    


    <div class="container body-content">
        @RenderBody()
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        
        <footer>
            <p>Terms of Use| &copy; @DateTime.Now.Year -SNK Bank Copyright Reserved </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

