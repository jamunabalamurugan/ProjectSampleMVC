@using Rash_Airlines.Models
@model IEnumerable<search_flight_Result>

@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="Content/bootstrap.css" rel="stylesheet" />
    <link href="Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="w3-content w3-section" style="max-width:1350px;height:510px;">
        <img class="mySlides" src="~/images/home.jpg" style="width:100%;height:510px;">
        <img class="mySlides" src="~/images/index.jpg" style="width:100%;height:510px;">
        <img class="mySlides" src="~/images/about.jpg" style="width:100%;height:510px;">
    </div>


    @*<img class="imgindex" src="~/images/index.jpg" />*@
    <section class="search-sec">
        <div class="container">

            @using (Html.BeginForm())
            {
                <div action="#" class="form-row" @*method="post"*@ novalidate="novalidate">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    @Html.DropDownList("dep", null, "From", new { @class = "form-control search-slt" }) @*<input type="text" class="form-control search-slt" placeholder="Enter Pickup City">*@
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    @Html.DropDownList("arr", null, "To", new { @class = "form-control search-slt" }) @*<input type="text" class="form-control search-slt" placeholder="Enter Drop City">*@
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    <input type="date" name="date" class="form-control search-slt" id="exampleFormControlSelect1"/>

                                    
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                    <input type="submit" value="Search" class="btn btn-danger wrn-btn" />
                                    @*<button type="button" class="btn btn-danger wrn-btn">Search</button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            }
            </div>
    </section>
            
    <div class="container" id="imagepanel">
        <div class="justify-content-center">
            <div style="text-align:center;text-shadow:2px 2px 3px #333;font-size: x-large;">The Rash Expeirence</div><br />
            <div class="col-md-3">
                <div class="card inner" style="width: 17rem;">
                    <img class="card-img-top" src="~/images/seats.jpg" alt="Card image cap" style="width: 230px;height:200px;">
                    <div class="card-body">
                        <h4 class="card-title text-center"><br />Economy Class Seats</h4>
                        <p class="card-text">
                            Best in class economy seats with sufficient leg room at great prices.
                            Relax, Recline and enjoy the comfort for your travel.
                        </p>

                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card inner" style="width: 17rem;">
                    <img class="card-img-top" src="~/images/seats1.jpg" alt="Card image cap" style="width: 230px;height:200px;">
                    <div class="card-body">
                        <h4 class="card-title text-center"><br />Buisness Class Seats</h4>
                        <p class="card-text">
                            Best in class Buisness seats with reclining seats and wider leg room.
                            Relax, Recline and enjoy the comfort for your travel.
                        </p>

                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card inner" style="width: 17rem;">
                    <img class="card-img-top" src="~/images/wifi.jpg" alt="Card image cap" style="width: 230px;height:200px;">
                    <div class="card-body">
                        <h4 class="card-title text-center"><br />Wifi Enabled Flights</h4>
                        <p class="card-text">
                            Free Wi-Fi 20MB
                            Free or pick a value Wi-Fi plan.
                            Connect to our inflight Wifi and enjoy a conversation with your loved ones. 



</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card inner" style="width: 17rem;">
                    <img class="card-img-top" src="~/images/screen.jpg" alt="Card image cap" style="width: 230px;height:200px;">
                    <div class="card-body">
                        <h4 class="card-title text-center"><br />Best in class Entertainment</h4>
                        <p class="card-text">
                            Inflight entertainment
                            on screens of high quality.
                            Explore over 4,500 channels.
                            All latest collection in many regional languages.
                        </p>

                    </div>
                </div>
            </div>







        </div>
    </div>


    <script>
        var myIndex = 0;
        carousel();

        function carousel() {
            var i;
            var x = document.getElementsByClassName("mySlides");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            myIndex++;
            if (myIndex > x.length) { myIndex = 1 }
            x[myIndex - 1].style.display = "block";
            setTimeout(carousel, 2500); // Change image every 2.5 seconds
        }
    </script>
</body>
</html>






















































