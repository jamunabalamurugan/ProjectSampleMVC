@model IEnumerable<Rash_Airlines.Models.Flights_Master>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Flight", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.flight_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.business_capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.economy_capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flight_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Routes_Master.route_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.flight_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.business_capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.economy_capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.flight_status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Routes_Master.route_id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit_Flight", new { id=item.flight_id }) |
            @Html.ActionLink("Details", "Details_Flight", new { id=item.flight_id }) |
            @Html.ActionLink("Delete", "Delete_Flight", new { id=item.flight_id })
        </td>
    </tr>
}

</table>
