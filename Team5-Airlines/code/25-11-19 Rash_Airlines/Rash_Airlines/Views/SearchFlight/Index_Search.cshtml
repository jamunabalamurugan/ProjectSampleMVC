@using Rash_Airlines.Models
@model IEnumerable<search_flight2_Result>

@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<body id="bg">



    <div class="row">
        <div class="col-md-4">
            <div class="flight-engine">
                <div class="top-right" style="font-family:'Tahoma', Geneva, Verdana, sans-serif">Plan your Trip</div>
                <div class="container">
                    <div class="tabing">
                        <ul>
                            <li>
                                <a class="active"><i class="fa fa-plane" aria-hidden="true"></i> Flight</a>
