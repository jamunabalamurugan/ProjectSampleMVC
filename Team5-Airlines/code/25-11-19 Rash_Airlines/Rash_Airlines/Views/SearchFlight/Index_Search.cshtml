                                                @Html.DropDownList("dep", null, "From", htmlAttributes: new { @class = "textboxstyle" })

                                        <div class="persent-one">
                                            <i class="fa fa-map-marker" id="arrival" aria-hidden="true"></i>
                                            @Html.DropDownList("arr", null, "To", htmlAttributes: new { @class = "textboxstyle" })
                                        </div>
