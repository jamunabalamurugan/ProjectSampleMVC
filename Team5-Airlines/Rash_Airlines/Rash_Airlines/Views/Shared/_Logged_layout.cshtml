
@{
    ViewBag.Title = "_Logged_layout";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Layout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        #footer {
            position: relative;
            margin-top: 5px;
            width: 100%;
            height: 2.5rem; /* Footer height */
            text-align: center;
        }
    </style>
</head>
<body>
    <br><br>
    <div class="container">
        <div class="navbar topnav navbar-fixed-top pull-left" style="margin:10px 60px 0px 60px;">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RASH Airlines", "Search", "SearchFlight", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li> @Html.ActionLink("Profile", "Details_Passenger", "Passenger_Reg", new { id = @Session["passenger_id"] }, null) </li>
                    @*<li>@Html.ActionLink("Register", "Create_Passenger", "Passenger_Reg")</li>*@
                    <li>@Html.ActionLink("LogOut", "LogOut", "Passenger_Login")</li>

                </ul>              

            </div>
        </div>
    </div>

    <div>
        @RenderBody()
     

    </div>


    <footer id="footer"> <hr /> &copy; @DateTime.Now.Year - Rash Airlines &reg;</footer>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)





</body>
             

