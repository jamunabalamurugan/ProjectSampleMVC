
@{
    ViewBag.Title = "_Search_Flight";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Layout</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        #footer {
            position: relative;
            margin-top: 10px;
            width: 100%;
            height: 2.5rem; /* Footer height */
            text-align: center;
        }
        .logo
        {
            margin-top:35px;
        }
    </style>
</head>
<body>
    <br><br>
    <div class="container">
        <div class="navbar topnav navbar-fixed-top pull-left">

            <div class="navbar-header pull-left" style="margin-right:900px;" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RASH Airlines", "Search", "SearchFlight", new { area = "" }, new { @class = "navbar-brand logo" })
            </div>

            <div class="navbar-collapse collapse" style="margin-left:670px;margin-top:-45px;">
                <ul class="nav pull-right">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Register", "Create_Passenger", "Passenger_Reg")</li>
                    <li>@Html.ActionLink("Login", "Login_Passenger", "Passenger_Login")</li>

                </ul>
            
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
 

       
    </div>
   

    <footer id="footer"> <hr /> &copy; @DateTime.Now.Year - Rash Airlines &reg;</footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)





</body>
</html>




