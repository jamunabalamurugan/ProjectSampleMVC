            </td>
            <td>
                <button class="button button1">
                    @Html.ActionLink("Edit", "Edit_Places", new { id = item.place_id })
                </button>
                @*<button class="button button1">
            @Html.ActionLink("Details", "Details_Places", new { id = item.place_id })
        </button>*@
