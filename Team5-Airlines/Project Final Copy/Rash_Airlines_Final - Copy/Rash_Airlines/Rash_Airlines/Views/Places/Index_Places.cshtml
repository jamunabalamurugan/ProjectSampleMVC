@model IEnumerable<Rash_Airlines.Models.Place>

@{
    ViewBag.Title = "Place Display";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h2 style="text-align:center">Places</h2>

<p>
    <button class="button button1 btn-block"> @Html.ActionLink("Add New Places", "Create_Places") </button>
</p>
<table class="table table-hover table-responsive" style="font-weight:700;font-size:12px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.place_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.place_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
