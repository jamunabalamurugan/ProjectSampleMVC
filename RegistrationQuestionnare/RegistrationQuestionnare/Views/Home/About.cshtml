<style>
    .bg-text {
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
        color: white;
        font-weight: bold;
        border: 3px solid #f1f1f1;
        position: absolute;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        width: 80%;
        padding: 20px;
        text-align: center;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .flip-card {
        background-color: transparent;
        width: 200px;
        height: 200px;
        perspective: 1000px;
        border-radius: 35px;
        display: inline-block;
        padding: 10px;
        margin: 10px;
    }

    .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        border-radius: 35px;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
        border-radius: 35px;
    }

    .flip-card-front, .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 35px;
    }

    .flip-card-front {
        background-color: #bbb;
        color: black;
        border-radius: 35px;
    }


    .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
        border-radius: 35px;
    }

    .centered {
        position: absolute;
        bottom: 8px;
        right: 16px;
        border-radius: 35px;
    }

    body {
        background-image: url("Images/iStock_74516649_0816.jpg");
        border-radius: 35px;
    }

    img {
        border-radius: 35px;
    }
</style>
