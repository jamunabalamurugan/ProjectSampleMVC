
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <style>


        .full {
            color: red;
        }

        .rating-love {
            position: relative;
            display: inline-block;
        }

        .rate {
            white-space: nowrap;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
    </style>



</head>
<body>

    @Html.ActionLink("Back", "Index", "Home")

    @if (Convert.ToBoolean(Session["result"]) == true)
    {
        @Html.Partial("~/Views/Shared/_cart.cshtml")
    }
    @{
        ViewBag.Title = "tv";
    }

    @using (Html.BeginForm("tv", "products", FormMethod.Post))
    {


        <h6>Try different Brand</h6>
        <input name="submit" type="submit" id="submit" value="LG" />

        <input name="submit" type="submit" id="submit" value="HOM" />

        <input name="submit" type="submit" id="submit" value="Kodak" />

        <input name="submit" type="submit" id="submit" value="Panasonic" />

        <input name="submit" type="submit" id="submit" value="Mi" />

        <input name="submit" type="submit" id="submit" value="Samsung" />

        <input name="submit" type="submit" id="submit" value="Sansui" />




        <br /><br />

        <h6>Take size that hits your Eyes</h6>
        <input name="submit" type="submit" id="submit" value="32 inches" />

        <input name="submit" type="submit" id="submit" value="40 inches" />
    }


























    <div>
        <br /><br />
        <h2 style="font-family: Algerian ;letter-spacing:3px;text-align:center">TELEVISION</h2>



        <div class="row" style="margin:5px;">
            @foreach (var item in Model)
            {
                if (item.categoryId == 201)
                {
                    <div class="col-md-4">

                        <br /><br />
                        @if (item.frontImage != null)
                        {


                            <a href="@Url.Action("productDescription", "products", new { id = item.itemId,catId=item.categoryId })" style="align-content:center">
                                <img style="align-content:center" src="@Url.Content(item.frontImage)" height="280" width="350" /><br /><br />
                            </a>


                        }
                        <br /><br /><br />




                        <b style="letter-spacing:1px;">Television</b>
                        <br />

                        @{
                            int rate = item.rating;
                        }

                        <div class="rating-love " style="float:left">
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart "></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="rate" style="width:@rate%;">
                                <!-- change this value for 0 to 100 -->
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                            </span>
                        </div>
                        <br />

                        @item.productName<br /><br />
                        <p>
                            visualise the real picture.
                        </p>


                        <p>Size : @item.size</p>
                        <p> Brand : @item.brand</p>
                        <p> @item.currentCost&nbsp;INR<p>   <br /><br /> <br /><br />
                    </div>
                }



            }
        </div>
    </div>
</body></html>

