
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <style>


        .full {
            color: red;
        }

        .rating-love {
            position: relative;
            display: inline-block;
        }

        .rate {
            white-space: nowrap;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
    </style>



</head>
<body>

    @Html.ActionLink("Back", "Index", "Home")

    @if (Convert.ToBoolean(Session["result"]) == true)
    {
        @Html.Partial("~/Views/Shared/_cart.cshtml")
    }


    @{
        ViewBag.Title = "mobilePhone";
    }




    @using (Html.BeginForm("mobilePhone", "products", FormMethod.Post))
    {

        <h6>Search for different Color</h6>
        <input name="submit" type="submit" id="submit" value="red" />

        <input name="submit" type="submit" id="submit" value="ash" />

        <input name="submit" type="submit" id="submit" value="blue" />

        <input name="submit" type="submit" id="submit" value="black" />

        <input name="submit" type="submit" id="submit" value="green" />

        <input name="submit" type="submit" id="submit" value="golden" />

        <input name="submit" type="submit" id="submit" value="white" />

        @*<input name="submit" type="submit" id="submit" value="sandal" />*@

        <input name="submit" type="submit" id="submit" value="yellow" />

        <input name="submit" type="submit" id="submit" value="pink" />

        <input name="submit" type="submit" id="submit" value="silver" />


        <h6>Try different Brand</h6>
        <input name="submit" type="submit" id="submit" value="Apple iPhone" />

        <input name="submit" type="submit" id="submit" value="Micromax" />

        <input name="submit" type="submit" id="submit" value="Nokia" />

        <input name="submit" type="submit" id="submit" value="OPPO" />

        <input name="submit" type="submit" id="submit" value="POCO" />

        <input name="submit" type="submit" id="submit" value="Realme 5" />

        <input name="submit" type="submit" id="submit" value="Redmi" />

        <input name="submit" type="submit" id="submit" value="Vivo" />

        <br /><br />

        <h6>Take size that fit you</h6>
        <input name="submit" type="submit" id="submit" value="62GB" />

        <input name="submit" type="submit" id="submit" value="32GB" />
    }




























    <div>
        <br /><br />
        <h2 style="font-family: Algerian ;letter-spacing:3px;text-align:center">MOBILE PHONE</h2>



        <div class="row" style="margin:5px;">
            @foreach (var item in Model)
            {
                if (item.categoryId == 203)
                {
                    <div class="col-md-4">

                        <br /><br />
                        @if (item.frontImage != null)
                        {


                            <a href="@Url.Action( "productDescription", "products",new { id=item.itemId,catId=item.categoryId })" style="align-content:center">
                                <img style="align-content:center" src="@Url.Content(item.frontImage)" height="320" width="210" /><br /><br />
                            </a>


                        }
                        <br /><br /><br />




                        <b style="letter-spacing:1px;">Mobile Phone</b>
                        <br />

                        @{
                            int rate = item.rating;
                        }

                        <div class="rating-love " style="float:left">
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart "></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="rate" style="width:@rate%;">
                                <!-- change this value for 0 to 100 -->
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                            </span>
                        </div>
                        <br />

                        @item.productName<br /><br />
                        <p>
                            Make more relationships and connect with people around.
                        </p>

                        <p>Size : @item.size</p>
                        <p> Brand : @item.brand</p>

                        <p> @item.currentCost&nbsp;INR<p>   <br /><br /> <br /><br />
                    </div>
                }



            }
        </div>
    </div>


</body></html>