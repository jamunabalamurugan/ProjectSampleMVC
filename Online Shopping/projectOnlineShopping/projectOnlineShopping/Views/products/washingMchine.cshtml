
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <style>


        .full {
            color: red;
        }

        .rating-love {
            position: relative;
            display: inline-block;
        }

        .rate {
            white-space: nowrap;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
    </style>



</head>
<body>
    @Html.ActionLink("Back", "Index", "Home")


    @if (@ViewBag.option == true)
    {
        @Html.Partial("~/Views/Shared/_cart.cshtml")
    }
    @{
        ViewBag.Title = "washingMchine";
    }


    @using (Html.BeginForm("washingMchine", "products", FormMethod.Post))
    {

        <h6>Search for different Color</h6>
        <input name="submit" type="submit" id="submit" value="red" />

        @*<input name="submit" type="submit" id="submit" value="orange" />*@

        @*<input name="submit" type="submit" id="submit" value="blue" />*@

        <input name="submit" type="submit" id="submit" value="black" />

        @*<input name="submit" type="submit" id="submit" value="green" />

            <input name="submit" type="submit" id="submit" value="brown" />*@

        <input name="submit" type="submit" id="submit" value="white" />

        <input name="submit" type="submit" id="submit" value="ash" />







        <h6>choose based on capacity</h6>
        <input name="submit" type="submit" id="submit" value="6.2kg" />

        <input name="submit" type="submit" id="submit" value="6.5kg" />

        <input name="submit" type="submit" id="submit" value="7kg" />


        <h6>Try different Brand</h6>
        <input name="submit" type="submit" id="submit" value="Godrej " />

        <input name="submit" type="submit" id="submit" value="IFB " />

        <input name="submit" type="submit" id="submit" value="LG" />

        <input name="submit" type="submit" id="submit" value="MarQ" />

        <input name="submit" type="submit" id="submit" value="Onida" />

        <input name="submit" type="submit" id="submit" value="Samsung" />

        <input name="submit" type="submit" id="submit" value="Whirlpool" />


    }

































    <div>
        <br /><br />
        <h2 style="font-family: Algerian ;letter-spacing:3px;text-align:center">WASHING MACHINE</h2>



        <div class="row" style="margin:5px;">
            @foreach (var item in Model)
            {
                if (item.categoryId == 202)
                {
                    <div class="col-md-4">

                        <br /><br />
                        @if (item.frontImage != null)
                        {


                            <a href="@Url.Action( "productDescription", "products",new { id=item.itemId,catId=item.categoryId })" style="align-content:center">
                                <img style="align-content:center" src="@Url.Content(item.frontImage)" height="320" width="300" /><br /><br />
                            </a>


                        }
                        <br /><br /><br />




                        <b style="letter-spacing:1px;">Washing Machine</b>
                        <br />

                        @{
                            int rate = item.rating;
                        }

                        <div class="rating-love " style="float:left">
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart "></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="rate" style="width:@rate%;">
                                <!-- change this value for 0 to 100 -->
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                            </span>
                        </div>
                        <br />

                        @item.productName<br /><br />
                        <p>
                            Let your kids play long outdoor games and let the clothes get worst, forget about stains. Make your cloths shining.
                        </p>

                        <p>Size : @item.size</p>
                        <p> Brand : @item.brand</p>




                        <p> @item.currentCost&nbsp;INR<p>
                    </div>
                }



            }
        </div>
    </div>


</body></html>
