
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



    <style>


        .full {
            color: red;
        }

        .rating-love {
            position: relative;
            display: inline-block;
        }

        .rate {
            white-space: nowrap;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 2;
        }
    </style>



</head>
<body>
    @Html.ActionLink("Back", "Index", "Home")


    @if (Convert.ToBoolean(Session["result"]) == true)
    {
        @Html.Partial("~/Views/Shared/_cart.cshtml")
    }


    @{
        ViewBag.Title = "laptop";
    }


    @using (Html.BeginForm("laptop", "products", FormMethod.Post))
    {
        <h6>Search for different Color</h6>
        <input name="submit" type="submit" id="submit" value="silver" />

        <input name="submit" type="submit" id="submit" value="red" />

        <input name="submit" type="submit" id="submit" value="black" />

        <input name="submit" type="submit" id="submit" value="blue" />

        <input name="submit" type="submit" id="submit" value="gold" />



        <h6>Try different Brand</h6>
        <input name="submit" type="submit" id="submit" value="asus" />

        <input name="submit" type="submit" id="submit" value="lenovo" />

        <input name="submit" type="submit" id="submit" value="dell" />

        <input name="submit" type="submit" id="submit" value="acer" />

        <input name="submit" type="submit" id="submit" value="apple" />

        <input name="submit" type="submit" id="submit" value="hp" />



        <h6>Take size that fit you</h6>
        <input name="submit" type="submit" id="submit" value="15.6inch" />

        <input name="submit" type="submit" id="submit" value="14inch" />

        <input name="submit" type="submit" id="submit" value="13.3inch" />








    }


    <div>
        <br /><br />
        <h2 style="font-family: Algerian ;letter-spacing:3px;text-align:center">LAPTOP</h2>



        <div class="row" style="margin:5px;">
            @foreach (var item in Model)
            {
                if (item.categoryId == 205)
                {
                    <div class="col-md-4">

                        <br /><br />
                        @if (item.frontImage != null)
                        {


                            <a href="@Url.Action( "productDescription", "products",new { id=item.itemId,catId=item.categoryId })" style="align-content:center">
                                <img style="align-content:center" src="@Url.Content(item.frontImage)" height="220" width="300" /><br /><br />
                            </a>


                        }
                        <br /><br /><br />




                        <b style="letter-spacing:1px;">LAPTOP</b><br />
                        <br />

                        @{
                            int rate = item.rating;
                        }

                        <div class="rating-love " style="float:left">
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart "></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="fa fa-heart"></span>
                            <span class="rate" style="width:@rate%;">
                                <!-- change this value for 0 to 100 -->
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                                <span class="fa fa-heart full"></span>
                            </span>
                        </div>
                        <br />

                        @item.productName <br />
                        <br />
                        <p>
                            Replace your personal computer with is stylish and light weight laptops but get all the features of computer
                        </p>


                        <p>Size : @item.size</p>
                        <p> Brand : @item.brand</p>
                        <p> @item.currentCost&nbsp;INR<p>   <br /><br /> <br /><br />
                    </div>
                }



            }
        </div>
    </div>



</body></html>