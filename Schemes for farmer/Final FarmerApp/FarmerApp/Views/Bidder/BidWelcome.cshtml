@model IEnumerable<FarmerApp.SellRequest>
<h2> @ViewBag.i</h2>


@{
    ViewBag.Title = "Bidder page";
}

<h2>Welcome!!! Check the Crop List here</h2>
<br /><br />



     


      <div>
          @Html.ActionLink("View Profile", "BidDetails")
      </div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Crop_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Crop_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fertilizer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soil_PH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baseprice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FarmerReg.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Crop_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Crop_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fertilizer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>

            @if (item.Soil_PH != null)
            {
                <img src="@Url.Content(item.Soil_PH)" height="100" width="100" />
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Baseprice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FarmerReg.Name)
        </td>
        <td>
            @Html.ActionLink("Bid Crop", "Bid", new { id = item.Crop_ID })
                <h1>@ViewBag.i</h1>


            @*@Html.ActionLink("Details", "Details", new { id = item.Crop_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Crop_ID })*@
        </td>
    </tr>
    }

</table>
